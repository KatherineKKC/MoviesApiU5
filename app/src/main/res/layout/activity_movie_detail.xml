<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".view.activities.MovieDetailActivity">

    <!-- Botón de favoritos -->
    <CheckBox
        android:id="@+id/btn_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox_favorite_star"
        android:checked="false"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/btn_favoritos_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!-- Imagen de la película -->
    <ImageView
        android:id="@+id/img_poster"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/btn_favorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Título de la película -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tv_title_pelicula"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_poster"/>

    <!-- Etiqueta "Título Original" -->
    <TextView
        android:id="@+id/tv_label_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_title_originals"
        android:textColor="@color/light_gray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Título Original -->
    <TextView
        android:id="@+id/tv_original"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_original"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_label_original"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Etiqueta "Valoración" -->
    <TextView
        android:id="@+id/tv_label_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_valoracion"
        android:textColor="@color/light_gray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_original"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Valoración -->
    <TextView
        android:id="@+id/tv_vote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_valoracion_publico"
        android:textColor="@color/netflix_red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_label_vote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Etiqueta "Fecha de estreno" -->
    <TextView
        android:id="@+id/tv_label_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_date"
        android:textColor="@color/light_gray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_vote"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Fecha de estreno -->
    <TextView
        android:id="@+id/tv_release"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_dates"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_label_release"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sinopsis -->
    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/sinopsis_de_la_pel_cula"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        android:textAlignment="viewStart"
        android:padding="8dp"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_release"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón de Volver -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_media_previous"
        android:tint="@color/white"
        android:backgroundTint="@color/netflix_red"
        android:contentDescription="@string/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
